<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.swati.greenbean.Greenometer"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TOTAL"
        android:id="@+id/total"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textColor="#66cc00"
        android:layout_marginTop="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GREEN QUOTIENT"

        android:id="@+id/totallabel"
        android:textSize="30sp"
        android:layout_below="@+id/total"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Water"
        android:id="@+id/switcher_water"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#0099ff"
        android:layout_below="@id/totallabel"
        android:layout_marginTop="200dp"
        android:paddingTop="15dip"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WATER"
        android:id="@+id/waterlabel"
        android:textSize="20sp"
        android:textColor="#0099ff"
        android:layout_below="@+id/switcher_water"

        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Energy"
        android:id="@+id/switcher_energy"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#336600"
        android:layout_below="@id/waterlabel"
        android:layout_marginTop="260dp"
        android:paddingTop="15dip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENERGY"
        android:id="@+id/energylabel"
        android:textSize="20sp"
        android:textColor="#336600"
        android:layout_below="@+id/switcher_energy"

        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Transport"
        android:id="@+id/switcher_transport"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/energylabel"
        android:layout_marginTop="320dp"
        android:textColor="#787878"
        android:paddingTop="15dip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TRANSPORT"
        android:id="@+id/transportlabel"
        android:textSize="20sp"
        android:textColor="#787878"
        android:layout_below="@+id/switcher_transport"

        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Waste"
        android:id="@+id/switcher_waste"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/transportlabel"
        android:layout_marginTop="380dp"
        android:paddingTop="15dip"
        android:textColor="#380000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WASTE"
        android:id="@+id/wastelabel"
        android:textSize="20sp"
        android:textColor="#380000"
        android:layout_below="@+id/switcher_waste"

        android:layout_centerHorizontal="true" />

</RelativeLayout>
